<div class="container-fluid">
                <div class="row prodline">
                    <%@products.each do |product| %>
                    <div class=" col-xs-12 col-sm-6 col-md-4">
                        <div class="product-image-wrapper">
                            <h2>
                            <%= product.name %></h2><%= image_tag(product.image_url, class: "jeans img-responsive") %>
                            <p>Brand : <%= product.brand %></p>
                            <p>Price: Â£ <%= product.price %></p>
                            <p><%= link_to '<i class="fa fa-eye" aria-hidden="true"></i>'.html_safe, product, :class => 'btn btn-default'%>
                            <% if signed_in? && current_user.admin? %>
                            <%= link_to 'Edit', edit_product_path(product), :class => 'btn btn-default' %>
                            <%= link_to 'Destroy', product, :class => 'btn btn-default', method: :delete, data: { confirm: 'Are you sure?' } %></p>
                              <%end %>
                        </div>
                    </div><!-- /col -->
                    <%end %>
                </div>
            </div>