  
<%= form_for @product , :html => {:class => "form-horizontal center mainform"} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 

   <div class="form-group fg">
    <%= f.label :name, "Product Title :", class: "col-md-4 control-label" %><br>
    <%= f.text_field :name, class: "col-md-7 text-a" %>
   </div>
      <div class="form-group fg">
    <%= f.label :description, "Product Description :", class: "col-md-4 control-label" %><br>
    <%= f.text_area :description, class: "col-md-7 text-a description" %>
      </div>
     <div class="form-group fg">
  <%= f.label :brand, "Product Brand :", class: "col-md-4 control-label" %><br>
  <%= f.text_field :brand, class: "col-md-7 text-a" %>
   </div>
      <div class="form-group fg">
  <%= f.label :color, "Main Color :", class: "col-md-4 control-label" %><br>
  <%= f.text_field :color, class: "col-md-7 text-a" %>
    </div>
   <div class="form-group fg">
  <%= f.label :price, "Price :", in: 1.0..20.0, step: 0.5, class: "col-md-4 control-label" %><br>
  <%= f.text_field :price, class: "col-md-7 text-a" %>
      </div>
    <div class="form-group fg">
    <%= f.label :image_url, "Image URL :", class: "col-md-4 control-label" %><br>
    <%= f.text_field :image_url, class: "col-md-7 text-a" %>
     </div>
       <div id= "submitbut">
   <%= f.submit :class => 'col-md-4 col-md-offset-6',:id => 'submit' %>
 </div>

