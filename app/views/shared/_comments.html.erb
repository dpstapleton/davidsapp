<section>
<hr>
<div class="row product-reviews">
    <% @comment.each do |comment| %>
        	<div class = "col-md-12">
            <p class = "round-image-50 rating-pic"> <%= image_tag(comment.user.avatar.url(:thumb)) %> </p>
        </div>
        <div class = "col-md-12">
            <p><%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
           <div class="rated text-center" data-score="<%= comment.rating %>"></div>
            <p><%= comment.body %></p>
            </div>
    <% end %>
     <div class = "col-md-12 pagi">
                <%= will_paginate @comment, :page_links => false %>
                  </div>
        </div>
</section>