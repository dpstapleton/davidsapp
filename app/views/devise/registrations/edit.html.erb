<div class="container">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
    <hr>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
    <div class="row">
      <!-- left column -->
      <div class="form group col-md-3">
        <div class="text-center">
         <%= image_tag(current_user.avatar.url(:medium), class: "round-image-100") %> 
       </div>
         <div class="form group col-md-3">  
         <%= f.file_field :avatar, class: "img-uploader" %>     
        </div>
      </div>

      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a> 
          <i class="fa fa-coffee"></i>
          <%= devise_error_messages! %>
        </div>
        <h3>Personal info</h3>
        
        <div class="form-group">
          <div class="fname">  
         <%= f.label :first_name, class: 'col-md-3 control-label'%>
          </div>
        <div class="col-md-9">
            <%= f.text_field :first_name, autofocus: true, class: 'form-control'  %>
        </div>
        </div><BR>

         <div class="form-group">
        <div class="lname">
        <%= f.label :last_name, class: 'col-md-3 control-label'  %>
        </div> 
        <div class="col-md-9">
            <%= f.text_field :last_name, autofocus: true, class: 'form-control'  %>
        </div>
            </div><BR>

          <div class="form-group">   

        <div class="email">
        <%= f.label :email, class: 'col-md-3 control-label'  %>
        </div> 
        <div class="col-md-9">
            <%= f.email_field :email, class: 'form-control'  %>
        </div>
          </div><BR>

          <div class="form-group">  
        <div class="Password">
        <%= f.label :password, class: 'col-md-3 control-label'  %>
        </div> 
        <div class="col-md-9">   
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
        <i>(leave blank if you don't want to change it)</i> 
        </div>
         </div> <BR><BR>

         <div class="form-group"> 
        <div class="Password-Confirm">
        <%= f.label :password_confirmation, class: 'col-md-3 control-label' %>
        </div> 
        <div class="col-md-9">
         <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'  %>
        </div>
          </div><BR>

          <div class="form-group"> 
         <div class="Password-Current">
        <%= f.label :current_password, class: 'col-md-3 control-label' %>
        </div> 
        <div class="col-md-9">
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
          <i>(we need your current password to confirm your changes)</i>
        </div>
           </div> <BR><BR>

    <div class="form-group">
        <div class="col-md-9 pull-right">
            <%= f.submit "Update", class: "btn btn-primary" %>
</div>
    </div>

    <% end %>

     </div>
        </div>

<div class= "row">
 <div class = "col-md-12" >  
 <h6>Unhappy? </h6> <p><%= button_to "Cancel my account", registration_path(resource_name), 
  data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
        </div>




       
