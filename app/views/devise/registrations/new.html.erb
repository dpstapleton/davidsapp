
<div class="container log-in">
<div class="panel panel-default">
<div class="panel-heading">

<h2>Let's Be Friends <i class="fa fa-smile-o" aria-hidden="true"></i></h2>

</div>

<div class="panel-body">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name, autofocus: true, class: "col-md-7 text-a" %>
  </div><br>

  <div class="form-group">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name, autofocus: true, class: "col-md-7 text-a" %>
  </div><br>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, class: "col-md-7 text-a" %>
  </div><br>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "col-md-7 text-a" %>
  </div><br>

   <div class="form-group">
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-md-7 text-a" %>
  </div>

 <div class="form-group">
    <%= f.submit "Sign up", :id => 'submit' %>
  </div>
<% end %> <br>

<%= render "devise/shared/links" %>

</div>
</div>
</div>